# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        # color_good = "#859900"       # color_good = "#2AA198"
        color_good = "#666666"
        color_bad = "#DC322F"        # color_bad = "#586E75"
        color_degraded = "#586E75"   # color_degraded = "#DC322F"
}

order += "run_watch VPN"
order += "wireless _first_"
order += "memory"
order += "ethernet _first_"
# order += "cpu_usage"
# order += "load"
order += "disk /"
# order += "disk /home"
order += "battery all"
# order += "load"
# order += "volume master"
order += "tztime local"
# order += "ipv6"

run_watch VPN {
        pidfile = "/run/charon.pid"
        format = " %title: %status "
        format_down = ""
}

cpu_usage {
        format = " cpu  %usage "
}

memory {
        color_degraded = "#666666"
        threshold_degraded = "50%"
        threshold_critical = "10%"
        format          = "" # I usually don't care about my RAM when not using Windows
        format_degraded = "  🗗  %used used,  %available available "
        # format = "%free %available (%used) / %total"
}

load {
        format = " load %1min "
        # max_threshold = 0.3
}

disk "/" {
        # format = " hdd %avail "
        format = "  ⛁  %avail "
}

wireless _first_ {
        # 🌍 
        format_up = " %ip (%essid) %quality "
        format_down = " --- "
}

ethernet _first_ {
# if you use %speed, i3status requires root privileges
        format_up = " lan: %ip %speed "
        format_down = " no lan "
}

battery all {
        # format = "%status %percentage %remaining %emptytime"
        format = " %status %percentage "
        format_down = " No battery "
        last_full_capacity = true
        integer_battery_capacity = true
        status_chr = " "
        status_chr = "⚡"
        # status_bat = "bat"
        status_bat = "☉"
        # status_bat = ""
        # status_unk = "?"
        status_unk = "~"
        # status_full = ""
        status_full = "☻"
        low_threshold = 15
        threshold_type = time
}

volume master {
    format = "♪ %volume"
    format_muted = "♪ %volume"
    device = "pulse"
}

tztime local {
        # format = "📆🗓 %Y-%m-%d %H:%M:%S"
        # format = " %d/%m/%Y  ⏲ %H:%M |"
        format = " %d/%m/%Y  %H:%M "
        # format = " 🗓  %Y-%m-%d	⏲  %H:%M "
}
