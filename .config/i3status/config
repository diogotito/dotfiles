general {
        colors = true
        interval = 5
        # color_good = "#859900"       # color_good = "#2AA198"
        color_good = "#666666"
        color_bad = "#DC322F"        # color_bad = "#586E75"
        color_degraded = "#586E75"   # color_degraded = "#DC322F"
}

